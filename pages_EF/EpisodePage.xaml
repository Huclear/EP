<Page x:Class="Practice3.pages_EF.EpisodePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice3.pages_EF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EpisodePage" Background="White" DataContext="{Binding RelativeSource={RelativeSource Self}, Path=podcastsVM}">
    <Grid>
        <DataGrid Name="EpisodesDGr" Margin="12" ItemsSource="{Binding Episodes}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название эпизода" Binding="{Binding Episode_Name}"/>
                <DataGridTextColumn Header="Описание эпизода" Binding="{Binding Episode_Description}"/>
                <DataGridTextColumn Header="Длительность эпизода" Binding="{Binding Episode_Duration}"/>
                <DataGridTextColumn Header="Подкаст" Binding="{Binding Podcast}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
