<Page x:Class="Practice3.pages_EF.AuthorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice3.pages_EF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorPage" Background="White" DataContext="{Binding RelativeSource={RelativeSource Self},Path=podcastsVM}">
    <Grid>
        <DataGrid Name="AuthorsDGr" Margin="12" ItemsSource="{Binding Authors}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding Author_Name}"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Author_SurName}"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding Author_Patronymic}"/>
                <DataGridTextColumn Header="Псевдоним" Binding="{Binding Author_Nickname}"/>
                <DataGridTextColumn Header="Возраст" Binding="{Binding Author_Age}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
