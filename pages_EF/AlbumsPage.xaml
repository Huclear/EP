<Page x:Class="Practice3.pages_EF.AlbumPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice3.pages_EF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AlbumsPage" Background="White" DataContext="{Binding RelativeSource={RelativeSource Self}, Path=podcastsVM}">
    <Grid>
        <DataGrid Name="AlbumsDGr" Margin="12" ItemsSource="{Binding Albums}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название альбома" Binding="{Binding Album_Name}"/>
                <DataGridTextColumn Header="Описание альбома" Binding="{Binding Album_Description}"/>
                <DataGridTextColumn Header="Автор альбома" Binding="{Binding Author}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
